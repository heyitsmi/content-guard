{
    "name": "heyitsmi/content-guard",
    "description": "A content sanitization library to filter negative content and online gambling spam.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hilmi",
            "email": "hilmi.workspace@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "php",
        "filter",
        "indonesia",
        "spam-detection",
        "content-moderation",
        "judi-online"
    ],
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Heyitsmi\\ContentGuard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heyitsmi\\ContentGuard\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Heyitsmi\\ContentGuard\\ContentGuardServiceProvider"
            ],
            "aliases": {
                "ContentGuard": "Heyitsmi\\ContentGuard\\Facades\\ContentGuard"
            }
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.8",
        "phpunit/phpunit": "^12.4"
    },
    "scripts": {
        "test": "vendor\\bin\\phpunit"
    }
}